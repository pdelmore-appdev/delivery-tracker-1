<div>
  <div>
    <h1>
      Delivery Tracker
    </h1>

    <p>Know if something gets lost in the mail.</p>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Expecting a package?
    </h2>

    <form action="/insert_package" method="post">
      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <input type="hidden" id="status_box" name="query_status" value="waiting_on">
      </div>

      <div>
        <label for="arrival_day_box">
          Suppose to arrive on
        </label>

        <input type="date" id="arrival_day_box" name="query_arrival_day">
      </div>

      <div>
        <label for="details_box">
          Details
        </label>

        <textarea id="details_box" name="query_details"></textarea>
        <br>
        <button>
          Log delivery
        </button>
      </form>
    </div>
  </div>

  <hr>

  <div class="waiting_on">
    <h2>Waiting on</h2>
    <ul>
      <% @list_of_packages.each do |a_package| %>
        <% if a_package.status == "waiting_on" %>
          <li>
            <div><%= a_package.description %></div>

            <% if @three_days_ago > a_package.arrival_day %>
              <div style="color: red;">
              <% else %>
                <div>
                <% end %>
                Supposed to arrive on <%= a_package.arrival_day %>
              </div>

              <div>
                <%= a_package.details %>
              </div>

              <div>
                <form action="/modify_package/<%= a_package.id %>" method="post">
                  <input type="hidden" name="query_status" value="arrived">

                  <button>Mark as received</button>
                </form>
              </div>

              <br>
            </li>
          <% end %>
        <% end %>
      </ul>

    </div>

    <hr>

    <div class="received">
      <h2>Received</h2>
      <ul>
        <% @list_of_packages.each do |a_package| %>
          <% if a_package.status == "arrived" %>
            <li>
              <div><%= a_package.description %></div>

              <div>
                <small>
                  Updated <%= time_ago_in_words(a_package.updated_at) %>
                  <a href="/delete_package/<%= a_package.id %>">Delete</a>
                </small></div>

              <br>
            </li>
          <% end %>
        <% end %>
      </ul>

    </div>

    <hr>
    <div>
      <div>
        <table border="1">
          <tr>
            <th>
              ID
            </th>

            <th>
              Description
            </th>

            <th>
              Status
            </th>

            <th>
              Arrival day
            </th>

            <th>
              Details
            </th>

            <th>
              User
            </th>

            <th>
              Created at
            </th>

            <th>
              Updated at
            </th>

            <th>
            </th>
          </tr>

          <% @list_of_packages.each do |a_package| %>
            <tr>
              <td>
                <%= a_package.id %>
              </td>

              <td>
                <%= a_package.description %>
              </td>

              <td>
                <%= a_package.status %>
              </td>

              <td>
                <%= a_package.arrival_day %>
              </td>

              <td>
                <%= a_package.details %>
              </td>

              <td>
                <%= a_package.user_id %>
              </td>

              <td>
                <%= time_ago_in_words(a_package.created_at) %> ago
              </td>
              <td>
                <%= time_ago_in_words(a_package.updated_at) %> ago
              </td>

              <td>
                <a href="/packages/<%= a_package.id %>">
                  Show details
                </a>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>

    <hr>
